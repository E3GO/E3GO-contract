  "description": "The Golden Head Project",
  "main": "index.js",
  "scripts": {
    "prettier": "npx prettier --write .",
    "test": "npx hardhat test --logs",
    "coverage": "npx hardhat coverage --solcoverjs ./.solcover.js",
    "compile": "npx hardhat compile",
    "flatten": "npx hardhat flatten",
    "check:format": "solhint contracts/*.sol --fix",
    "deploy:mainnet": "npx hardhat run scripts/deploy.js --network mainnet",
    "deploy:goerli": "npx hardhat run scripts/deploy.js --network goerli",
    "deploy:polygon:mainnet": "npx hardhat run scripts/deploy.js --network polygonMainnet",
    "deploy:polygon:mumbai": "npx hardhat run scripts/deploy-test.js --network polygonMumbai"
  },
  "files": [
    "build/abi",
    "contracts"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vachmara/tGHP.git"
  },
  "keywords": [
    "ERC20",
    "Ethereum",
    "Solidity",
    "Smart+Contracts",
    "Blockchain"
  ],
  "author": "Valentin Chmara",
  "homepage": "https://github.com/vachmara/tGHP#readme",
  "dependencies": {
    "@chainlink/contracts": "^0.4.0",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.6",
    "@openzeppelin/contracts": "^4.1.0",
    "dotenv": "^16.0.3",
    "prettier": "^2.3.0",
    "solc": "^0.8.17",
    "solidity-coverage": "^0.7.16",
    "solidity-docgen": "^0.5.13",
    "surya": "^0.4.2",
    "truffle": "^5.3.7",
